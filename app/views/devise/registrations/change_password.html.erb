<div class="login-page">
  <div class="form">
  <h2>Change your password</h2>

  <%= form_for(resource,:class =>'register-form',
  as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>    Currently waiting confirmation for: <%= resource.unconfirmed_email %>
  <% end %>

  <%= f.label :password %> (leave blank if you don't want to change it)    <%= f.password_field :password, autocomplete: "off" %>
  <% if @minimum_password_length %>
  <%= @minimum_password_length %> characters minimum
  <% end %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "off" %>
  <%= f.label :current_password %> (we need your current password to confirm your changes)
  <%= f.password_field :current_password, autocomplete: "off" %>
  <%= f.submit "Update" %>
 <% end %>
 <%= link_to "Back", :back %>
 </div>
</div>
