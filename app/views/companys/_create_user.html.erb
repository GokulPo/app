
<%= form_for :user,:url=>{:controller=>"users",:action=>"usercreate"},html: {id: "createForm"},remote: true do |f|%>
<%= f.text_field :firstname, autofocus: true,:placeholder=>'Firstname' %>
<%= f.text_field :lastname, autofocus: true,:placeholder=>'Lastname' %>
<%= f.email_field :email, autofocus: true,:placeholder=>'Email' %>
<%= f.text_field :dob, :id => "datepicker",:placeholder=>'Date of Birth' %>
<%= f.text_field :phone, autofocus: true, :placeholder=>'Phone number' %>
<%= f.password_field :password, autofocus: true,:placeholder=>'Password' %>
<%= f.password_field :password_confirmation, autofocus: true,:placeholder=>'Confirm Password' %>
<%= f.hidden_field :company_id, :value => @company.id %>
<%= f.hidden_field :role_id, :value => '2' %>
<%= f.submit "Create User", :class => 'btn btn-primary' %>
<% end %>
