<div class="deleteRender">
  <%#= render 'delete_company_modal' %>
</div>

<div class="container">
  <div class="container1">
    <div>
      <% if current_user.admin? %>
         <h3>Admin Home </h3>
      <% end %>
    </div>
    <div class="bclass">
        <%= render 'companys' %>
    </div>


    <div class="addOrg ">
      <% if current_user.admin? %>

        <%= form_for :company,:url=>{:controller=>"companys",:action=>"create"},html: {id: "TeamForm"}, remote: true do |f|%>
          <%= f.text_field :name, autofocus: true,:placeholder=>'Team Name' %>
          <%= f.number_field :maxcount, autofocus: true,:placeholder=>'No. of Members',:max=> 50 %>
          <%= f.label :avatar, "Image" %>
          <%= f.file_field :avatar %>
          <%= f.submit "Create Team" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
